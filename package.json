{
  "name": "tileboard",
  "version": "2.2.0",
  "description": "Simple yet highly customizable dashboard for Home Assistant",
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "rollup --config --environment PRODUCTION",
    "build:watch": "rollup --config --environment PRODUCTION --watch",
    "lint": "eslint rollup.config.js scripts",
    "fix": "eslint --fix rollup.config.js scripts",
    "release": "standard-version"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "git pull && yarn && yarn build",
      "posttag": "git push --follow-tags"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "node post-merge-warn.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "yarn lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resoai/TileBoard.git"
  },
  "author": "Alexey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/resoai/TileBoard/issues"
  },
  "homepage": "https://github.com/resoai/TileBoard#readme",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/angular": "^1.8.1",
    "@types/hammerjs": "^2.0.39",
    "@types/hls.js": "^0.13.3",
    "@types/lodash.mergewith": "^4.6.6",
    "angular-i18n": "^1.8.2",
    "babel-plugin-angularjs-annotate": "^0.10.0",
    "core-js": "3",
    "eslint": "^7.20.0",
    "husky": "^4.3.8",
    "less": "^4.1.1",
    "lint-staged": "^10.5.4",
    "print-message": "^3.0.1",
    "rollup": "^2.39.0",
    "rollup-plugin-copy-merge": "^0.2.0",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-emit-ejs": "^3.1.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-styles": "^3.14.1",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.1.1"
  },
  "dependencies": {
    "@mdi/font": "^5.9.55",
    "angular": "^1.8.2",
    "angular-chart.js": "^1.1.1",
    "angular-dynamic-locale": "^0.1.37",
    "angular-hammer": "^2.2.0",
    "angular-moment": "^1.3.0",
    "angularjs-gauge": "^2.2.0",
    "chart.js": "^2.9.4",
    "hls.js": "^0.14.17",
    "lodash.mergewith": "^4.6.2",
    "node-sass": "^5.0.0"
  },
  "resolutions": {
    "chart.js": "2.9.4"
  }
}
